<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="High Risk"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/gray_dark"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/gray_light"
        android:layout_marginBottom="25dp"
        android:text="Some problem may have occurred. This attempt has been recorded.\n\n Enter password to continue."
        android:textSize="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Just a demo"
        android:textSize="18dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/gray_light"
        android:background="@drawable/gray_stroke_bkg"
        android:id="@+id/password"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Login"
        android:gravity="center"
        android:textSize="22dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_bkg"
        android:textColor="#ffffff"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="View Issues"
        android:gravity="center"
        android:textSize="22dp"
        android:padding="10dp"
        android:background="@drawable/button_bkg"
        android:textColor="#ffffff"
        android:clickable="true"/>



</LinearLayout>