<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Styles used for defining custom Score Layout -->
    <declare-styleable name="ScoreLayout">
        <attr name="pie_stroke" format="dimension" />
        <attr name="pie_main_color" format="color" />
        <attr name="pie_back_color" format="color" />
        <attr name="title_text" format="string" />
        <attr name="percentage_text_size" format="dimension" />
        <attr name="title_text_size" format="dimension" />
    </declare-styleable>

</resources>
